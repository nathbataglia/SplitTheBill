<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.PersonActivity">

    <EditText
        android:id="@+id/nomeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/valorGastoEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/descricaoEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição compra"
        android:inputType="text" />

    <EditText
        android:id="@+id/valorGastoEt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/descricaoEt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição compra"
        android:inputType="text" />

    <EditText
        android:id="@+id/valorGastoEt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor pago"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/descricaoEt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição compra"
        android:inputType="text" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:onClick="save" />

</LinearLayout>
